##########################################################
##> Globals
##########################################################

# Set keys
set $mod Mod1
floating_modifier $mod


# Disable mouse focus
focus_follows_mouse no


# Font
font pango:SF Mono 9


# Focus on open
focus_on_window_activation focus
force_focus_wrapping force


